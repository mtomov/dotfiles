alias ...='../..'
alias ls='ls --color=auto'
alias ll='ls -alh'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

alias free="free -m"
# alias open=xdg-open

alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

alias di='dirs -v | head -10'

# Git
