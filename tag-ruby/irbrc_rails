require "logger"

def loud_logger
  set_logger_to Logger.new(STDOUT)
end

def quiet_logger
  set_logger_to nil
end

def set_logger_to(logger)
  ActiveRecord::Base.logger = logger
end

def fuser(email)
  User.find_by(email: email)
end

if defined?(Variant)
  V = Variant
  P = Product
  M = Message
  Co = Conversation
  A = Account
end

# set a nice prompt
rails_root = File.basename(Dir.pwd)
IRB.conf[:PROMPT] ||= {}
IRB.conf[:PROMPT][:RAILS] = {
  :PROMPT_I => "#{rails_root}> ",
  :PROMPT_S => "#{rails_root}* ",
  :PROMPT_C => "#{rails_root}? ",
  :RETURN   => "=> %s\n"
}
IRB.conf[:PROMPT_MODE] = :RAILS

# turn on the loud logging by default
IRB.conf[:IRB_RC] = proc { quiet_logger }
